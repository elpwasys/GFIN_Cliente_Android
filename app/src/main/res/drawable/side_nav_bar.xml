<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item
    android:top="-2dp"
    android:left="-2dp"
    android:right="-2dp"
    android:bottom="1dp">
    <shape
        android:shape="rectangle">
        <gradient
            android:angle="135"
            android:centerColor="#FFF7F7F7"
            android:endColor="#FFF7F7F7"
            android:startColor="#FFF7F7F7"
            android:type="linear" />
        <solid android:color="@android:color/transparent" />
        <stroke
            android:color="@color/grey_300"
            android:width="1dp"/>
        <padding
            android:bottom="8dp"/>
    </shape>
</item>
</layer-list>